{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
<div id="home">
    <div style="float: left;width: 33.33%;">
        <h1
            style="color:black;display: inline-block;transform: rotate(-90deg);font-size:35px;margin-top:100px;margin-left:-30px;">
            SUBMIT</h1>
    </div>
</div>

<main id="site-main" class="site-main outer">
    <div class="inner">


        <!-- modify this form HTML and place wherever you want your form -->

        <form action="https://formspree.io/f/meqpagrn" method="POST" enctype="multipart/form-data">
            <p><label style="color:#e8962c;font-weight:bold;">
                    NAME *<br>
                    <input type="text" name="_replyto">
                </label></p>
            <p><label style="color:#e8962c;font-weight:bold;">
                    EMAIL *<br>
                    <input type="text" name="_replyto">
                </label></p>
            <p><label style="color:#e8962c;font-weight:bold;">
                    HOMETOWN<br>
                    <input type="text" name="_replyto">
                </label></p>
            <p><label style="color:#e8962c;font-weight:bold;">
                    DATE WRITTEN *<br>
                    <input type="text" name="_replyto">
                </label></p>
            <div>
                <div style="float: left;width: 33.33%;text-align:center;margin-top:15px;">
                    <label style="font-weight:bold;">
                        <span>WRITING</span><br>
                        <input type="file" name="upload" style="margin-top:20px;">
                    </label>
                </div>
                <div style="float: left;width: 33.33%;text-align:center;margin-top:15px;">
                    <label style="font-weight:bold;">
                        <span>ARTWORK</span><br>
                        <input type="file" name="upload" multiple style="margin-top:20px;">
                    </label>
                </div>
                <div style="float: left;width: 33.33%;text-align:center;margin-top:15px;">
                    <label style="font-weight:bold;">
                        <span style="margin-bottom:15px;">MUSIC</span><br>
                        <input type="file" name="upload" style="margin-top:20px;">
                    </label>
                </div>
            </div>



            <div style="margin-top: 20vh; text-align:center;">
                <button type="submit">Send</button>
            </div>
            
        </form>

    </div>
</main>

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
<script>
    $(function () {
        var $postContent = $(".post-full-content");
        $postContent.fitVids();
    });
</script>
{{/contentFor}}