{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
<nav style="text-align:center;">
    <a href="/" style="text-decoration:none;color:black;font-size:32px;font-weight:bold;">A$AP FABLES</a>
</nav>

<main id="site-main" class="site-main outer submit-main" style="background-image:url({{asset 'header-submit.png'}});background-repeat:no-repeat;background-position:top;
background-size:contain;background-position-y:44px;margin-top:20px;margin:0;">
    <div class="inner" style="margin:7% 10%;">


        <!-- modify this form HTML and place wherever you want your form -->

        <form action="https://formspree.io/f/meqpagrn" method="POST" enctype="multipart/form-data">
            <p><label style="color:#e8962c;font-weight:bold;">
                    NAME <span style="color:red;">*</span><br>
                    <input type="text" name="_replyto" class="submit-input">
                </label></p>
            <p><label style="color:#e8962c;font-weight:bold;">
                    EMAIL <span style="color:red;">*</span><br>
                    <input type="text" name="_replyto" class="submit-input">
                </label></p>
            <p><label style="color:#e8962c;font-weight:bold;">
                    HOMETOWN<br>
                    <input type="text" name="_replyto" class="submit-input">
                </label></p>
            <p><label style="color:#e8962c;font-weight:bold;">
                    DATE WRITTEN <span style="color:red;">*</span><br>
                    <input type="text" name="_replyto" class="submit-input">
                </label></p>
            <div>
                <div class="col-3">
                    <label style="font-weight:bold;">
                        <span>WRITING</span><br>
                        <input type="file" name="upload-writing" style="margin-top:20px;">
                    </label>
                </div>
                <div class="col-3">
                    <label style="font-weight:bold;">
                        <span>ARTWORK</span><br>
                        <input type="file" name="upload-artwork" multiple style="margin-top:20px;">
                    </label>
                    <label style="font-weight:bold;">
                        <span class="sr-only">artist name and title of work</span><br>
                        <input type="text" name="upload" style="margin-top:20px; width:200px;" placeholder="artist name and title of work">
                    </label>
                </div>
                <div class="col-3">
                    <label style="font-weight:bold;">
                        <span style="margin-bottom:15px;">MUSIC</span><br>
                        <input type="file" name="upload-music" style="margin-top:20px;">
                    </label>
                </div>
            </div>



            <div style="margin-top: 20vh; text-align:center;">
                <button type="submit" class="btn black-bg" style="border:none;">SUBMIT</button>
            </div>
            
        </form>

    </div>
</main>

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
<script>
    $(function () {
        var $postContent = $(".post-full-content");
        $postContent.fitVids();
    });
</script>
{{/contentFor}}